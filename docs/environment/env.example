# Copoazú Shop - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# For production, add these variables to your Vercel dashboard

# ===========================================
# VARIABLES CRÍTICAS (REQUERIDAS)
# ===========================================
# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
# For production: https://your-app.vercel.app

# Web3 Configuration - Reown (formerly WalletConnect)
NEXT_PUBLIC_REOWN_PROJECT_ID=your_reown_project_id
# Get from: https://cloud.reown.com

# Celo Network Configuration
NEXT_PUBLIC_CELO_RPC_URL=https://rpc.celocolombia.org
NEXT_PUBLIC_CELO_EXPLORER_URL=https://explorer.celo.org

# Divvi Integration
NEXT_PUBLIC_DIVVI_CONSUMER_ADDRESS=your_divvi_consumer_address

# Environment
NODE_ENV=development
# For production: production

# ===========================================
# VARIABLES OPCIONALES (Solo si las usas)
# ===========================================

# NextAuth (solo si usas autenticación)
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000
# For production: https://your-app.vercel.app

# Self Verification (solo si usas Self)
NEXT_PUBLIC_SELF_APP_ID=copoazu-shop-main
NEXT_PUBLIC_SELF_SCOPE=copoazu-prod
NEXT_PUBLIC_SELF_ENDPOINT=http://localhost:3000/api/verify
# For production: https://your-app.vercel.app/api/verify
SELF_SECRET_KEY=

# Email (solo si usas Resend)
RESEND_API_KEY=

# Analytics (solo si usas Google Analytics)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# ===========================================
# CONFIGURACIÓN POR AMBIENTE
# ===========================================
# 
# DESARROLLO (.env.local):
# - Usa URLs localhost
# - NODE_ENV=development
# - NEXT_PUBLIC_APP_URL=http://localhost:3000
# - NEXT_PUBLIC_SELF_ENDPOINT=http://localhost:3000/api/verify
#
# PRODUCCIÓN (Vercel Environment Variables):
# - Usa URLs de producción
# - NODE_ENV=production
# - NEXT_PUBLIC_APP_URL=https://your-app.vercel.app
# - NEXT_PUBLIC_SELF_ENDPOINT=https://your-app.vercel.app/api/verify
#
# Para más detalles, ver: docs/environment/env-variables.md
