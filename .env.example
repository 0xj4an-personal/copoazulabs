# Copoazú Shop Environment Variables
# Copy this file to .env.local and fill in your values

# ===================================
# App Configuration
# ===================================
NEXT_PUBLIC_APP_NAME="Copoazú Shop"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_DESCRIPTION="Web3 Fashion & Merchandise E-commerce Platform"

# ===================================
# Blockchain Configuration (Celo)
# ===================================
NEXT_PUBLIC_CELO_NETWORK="alfajores" # or "mainnet"
NEXT_PUBLIC_CELO_RPC_URL="https://alfajores-forno.celo-testnet.org"
NEXT_PUBLIC_CELO_EXPLORER_URL="https://explorer.celo.org/alfajores"

# Wallet Connect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID="your_walletconnect_project_id_here"

# Contract Addresses (Celo Alfajores Testnet)
NEXT_PUBLIC_CCOP_TOKEN_ADDRESS="0x456a3D042C0DbD3db53D5489e98dFb038553B0d0"
NEXT_PUBLIC_PAYMENT_CONTRACT_ADDRESS="your_payment_contract_address_here"

# ===================================
# Divvi Referral System
# ===================================
NEXT_PUBLIC_DIVVI_API_KEY="your_divvi_api_key_here"
NEXT_PUBLIC_DIVVI_PROJECT_ID="your_divvi_project_id_here"
DIVVI_SECRET_KEY="your_divvi_secret_key_here"

# ===================================
# Self Identity Verification
# ===================================
NEXT_PUBLIC_SELF_APP_ID="your_self_app_id_here"
SELF_SECRET_KEY="your_self_secret_key_here"

# ===================================
# Analytics & Monitoring
# ===================================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="your_ga_id_here"
NEXT_PUBLIC_MIXPANEL_TOKEN="your_mixpanel_token_here"

# ===================================
# Email & Notifications
# ===================================
RESEND_API_KEY="your_resend_api_key_here"
NEXT_PUBLIC_SUPPORT_EMAIL="support@copoazulabs.com"

# ===================================
# Image & Media Storage
# ===================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your_cloudinary_name_here"
CLOUDINARY_API_KEY="your_cloudinary_api_key_here"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret_here"

# ===================================
# Database (if needed)
# ===================================
DATABASE_URL="your_database_url_here"
REDIS_URL="your_redis_url_here"

# ===================================
# Security
# ===================================
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# ===================================
# Development
# ===================================
NODE_ENV="development"
LOG_LEVEL="info"